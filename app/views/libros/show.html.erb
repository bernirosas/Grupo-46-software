<html>
<head>
    <%= stylesheet_link_tag 'libros' %>
</head>

<body>
<div class="page-container">
<div class ="content-wrap">
<%= render 'componentes/header' %>

    <div class="container-libro">

        <%=image_tag "ruby.jpg", class: "foto-libro" %>

        <div class="descripcion">
            <h1><%= @libro.titulo %></h1>
            <p><%= @libro.fecha %></p>
            <p><%= @libro.categoria %></p>
            <p><%= @libro.precio %></p>
            <p><%= @libro.autor %></p>
            <p><%= @libro.stock %></p>
            <p><%= @libro.descripcion %></p>
        </div>
    
    </div>

    <ul>
        <li><%= link_to "Edit", :edit_libro%></li>
        <li><%= link_to "Destroy", :libro,
        data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
        } %></li>
        <li><%= link_to "Lista", :libros %></li>
        <li><%= link_to "ReseÃ±as", "/libros/#{@libro.id}/resenas/"  %></li>
